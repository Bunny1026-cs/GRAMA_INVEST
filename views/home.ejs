    <script>
        function showForm(formId) {
            document.getElementById('signupFormCard').classList.remove('active');
            document.getElementById('loginFormCard').classList.remove('active');
            document.getElementById(formId).classList.add('active');
        }

        function closeForm(formId) {
            document.getElementById(formId).classList.remove('active');
        }

        document.getElementById('signupForm').onsubmit = async function (event) {
            event.preventDefault();
            const formData = {
                name: document.getElementById('name').value,
                email: document.getElementById('email').value,
                password: document.getElementById('password').value
            };
            try {
                const response = await fetch('/signup', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });
                const result = await response.json();
                if (response.ok) {
                    alert('Sign-up successful!');
                    closeForm('signupFormCard');
                } else {
                    alert(`Sign-up failed: ${result.message}`);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Sign-up failed');
            }
        }

        document.getElementById('loginForm').onsubmit = async function (event) {
            event.preventDefault();
            const formData = {
                email: document.getElementById('loginEmail').value,
                password: document.getElementById('loginPassword').value
            };
            try {
                const response = await fetch('/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });
                const result = await response.json();
                if (response.ok) {
                    alert('Login successful!');
                    closeForm('loginFormCard');
                    localStorage.setItem('user', JSON.stringify(result.user)); // Save user data to localStorage
                    showProfileButton();
                    loadProfilePhoto();
                } else {
                    alert(`Login failed: ${result.message}`);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Login failed');
            }
        }

        function showProfileButton() {
            document.getElementById('authButtons').style.display = 'none';
            document.getElementById('profileButton').style.display = 'block';
        }

        function showAuthButtons() {
            document.getElementById('authButtons').style.display = 'block';
            document.getElementById('profileButton').style.display = 'none';
        }

        function loadProfilePhoto() {
            const user = JSON.parse(localStorage.getItem('user'));
            if (user && user.profilePhoto) {
                document.getElementById('profileImage').src = user.profilePhoto;
            }
        }

        function logout() {
            alert('Logged out successfully!');
            localStorage.removeItem('user'); // Clear user data from localStorage
            showAuthButtons();
            window.location.href = '/';
        }

        document.addEventListener('DOMContentLoaded', function() {
            const user = JSON.parse(localStorage.getItem('user'));
            if (user) {
                showProfileButton();
                loadProfilePhoto();
            }
        });

        function previewProfilePhoto() {
            const file = document.getElementById('profilePhoto').files[0];
            const reader = new FileReader();
            reader.onloadend = function () {
                document.getElementById('profileImage').src = reader.result;
                const user = JSON.parse(localStorage.getItem('user'));
                user.profilePhoto = reader.result;
                localStorage.setItem('user', JSON.stringify(user)); // Save to localStorage
            }
            if (file) {
                reader.readAsDataURL(file);
            }
        }

        document.getElementById('profileForm').onsubmit = async function (event) {
            event.preventDefault();
            const formData = new FormData();
            formData.append('profilePhoto', document.getElementById('profilePhoto').files[0]);

            const user = JSON.parse(localStorage.getItem('user'));
            const token = user ? user.token : '';

            try {
                const response = await fetch('/upload-profile-photo', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    },
                    body: formData
                });
                const result = await response.json();
                if (response.ok) {
                    alert('Profile photo uploaded successfully!');
                    document.getElementById('profileImage').src = result.profilePhoto;
                    user.profilePhoto = result.profilePhoto;
                    localStorage.setItem('user', JSON.stringify(user));
                } else {
                    alert(`Profile photo upload failed: ${result.message}`);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Profile photo upload failed');
            }
        };

        function toggleProfile() {
            const profileSection = document.getElementById('profileSection');
            profileSection.classList.toggle('active');
        }

