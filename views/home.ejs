        document.addEventListener('mousemove', function (e) {
            const cursorEffects = [
                document.getElementById('cursorEffect1'),
                document.getElementById('cursorEffect2'),
                document.getElementById('cursorEffect3'),
                document.getElementById('cursorEffect4'),
                document.getElementById('cursorEffect5')
            ];

            cursorEffects.forEach((cursorEffect, index) => {
                setTimeout(() => {
                    cursorEffect.style.left = e.pageX + 'px';
                    cursorEffect.style.top = e.pageY + 'px';
                }, index * 100); // Increase delay for bigger waves
            });
        });

        document.addEventListener('mouseleave', function () {
            const cursorEffects = [
                document.getElementById('cursorEffect1'),
                document.getElementById('cursorEffect2'),
                document.getElementById('cursorEffect3'),
                document.getElementById('cursorEffect4'),
                document.getElementById('cursorEffect5')
            ];

            cursorEffects.forEach(cursorEffect => {
                cursorEffect.style.opacity = '0';
            });
        });

        document.addEventListener('mouseenter', function () {
            const cursorEffects = [
                document.getElementById('cursorEffect1'),
                document.getElementById('cursorEffect2'),
