<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grama Invest</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', Arial, sans-serif;
            background-color: #0d1b2a;
            color: #e0e1dd;
            line-height: 1.6;
            scroll-behavior: smooth;
        }

        .navbar {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0.6rem 2rem;
            background: linear-gradient(90deg, #57534e, #5c0d46);
            color: #333;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

        .navbar nav {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .navbar a {
            color: #000;
            text-decoration: none;
            font-size: 1rem;
            font-weight: bold;
            position: relative;
            transition: color 0.3s ease;
        }

        .navbar a:hover {
            color: #333;
        }

        .hero {
            text-align: center;
            padding: 5rem 1rem;
            background: linear-gradient(90deg, #081a29, #696a77);
            color: #fcfaf2;
            animation: fadeIn 1s ease-in-out;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .hero p {
            font-size: 1.2rem;
        }

        .logo-container {
            margin: 1.5rem 0;
            text-align: center;
        }

        .logo-container img {
            max-width: 120px;
            height: auto;
            margin-bottom: 1rem;
        }

        .logo-container p {
            font-size: 1rem;
            color: #e0e1dd;
        }

        .buttons-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 2rem;
            padding: 2rem 1rem;
        }

        .button-card {
            background: #14213d;
            border-radius: 10px;
            width: 280px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            text-align: center;
            padding: 1.5rem 1rem;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            color: #fff;
            border: 2px solid rgb(245, 240, 240);
            max-width: 350px;
            flex: 1 1 30%;
            margin-bottom: 2rem;
            box-shadow: 0 0 10px rgba(234, 44, 164, 20);
            cursor: pointer;
            /* Add cursor pointer to indicate clickable */
        }

        .button-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

        .button-card h3 {
            margin-top: 1rem;
            font-size: 1.5rem;
            color: #ffeb3b;
        }

        .button-card p {
            margin-top: 0.5rem;
            font-size: 1rem;
        }

        .button-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(230, 224, 225, 0.7);
        }

        .button-card:hover::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(221, 218, 218, 0.2);
            z-index: -1;
            transition: all 0.3s ease-in-out;
        }

        .info {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: #1c2541;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            text-align: center;
            color: #e0e1dd;
            animation: slideIn 1s ease-in-out;
        }

        .info p {
            font-size: 1rem;
        }

        .facts {
            padding: 2rem 1rem;
            background: #0d1b2a;
            color: #e0e1dd;
        }

        .facts h2 {
            text-align: center;
            margin-bottom: 1rem;
            font-size: 1.8rem;
            color: #ffeb3b;
        }

        .facts ul {
            max-width: 800px;
            margin: 0 auto;
            list-style: disc;
            padding-left: 1.5rem;
        }

        .facts li {
            margin-bottom: 0.8rem;
            font-size: 1rem;
        }

        .auth-buttons {
            position: absolute;
            top: 20px;
            right: 20px;
        }

        .auth-buttons button {
            margin: 0 5px;
            padding: 10px 20px;
            background: #444;
            border: none;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            transition: background 0.3s, transform 0.3s;
        }

        .auth-buttons button:hover {
            background: #00ff00;
            transform: scale(1.1);
        }

        .form-card {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: #1c2541;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            z-index: 1000;
            animation: fadeIn 1s ease-in-out;
        }

        .form-card.active {
            display: block;
        }

        .close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #ff0000;
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            cursor: pointer;
            font-size: 1rem;
            line-height: 1;
            text-align: center;
        }

        .profile-section {
            position: fixed;
            top: 20px;
            right: -300px;
            /* Hidden by default */
            width: 300px;
            height: 100%;
            background: #1c2541;
            padding: 2rem;
            border-radius: 10px 0 0 10px;
            box-shadow: -4px 0 8px rgba(0, 0, 0, 0.3);
            text-align: center;
            color: #e0e1dd;
            transition: right 0.3s ease;
            z-index: 1000;
        }

        .profile-section.active {
            right: 0;
            /* Slide in */
        }

        .profile-section img {
            max-width: 150px;
            border-radius: 50%;
            margin-bottom: 1rem;
        }

        .profile-section input[type="file"] {
            display: none;
        }

        .profile-section label {
            background: #444;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s, transform 0.3s;
        }

        .profile-section label:hover {
            background: #00ff00;
            transform: scale(1.1);
        }

        .profile-section .close-btn {
            position: absolute;
            top: 10px;
            left: 10px;
            background: #ff0000;
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            cursor: pointer;
            font-size: 1rem;
            line-height: 1;
            text-align: center;
        }

        .about-section {
            padding: 4rem 2rem;
            background-color: #1c2541;
            color: #e0e1dd;
            text-align: center;
            animation: slideIn 1s ease-in-out;
        }

        .about-section h2 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .about-section p {
            font-size: 1.2rem;
            max-width: 800px;
            margin: 0 auto;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @keyframes slideIn {
            from {
                transform: translateY(50px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
    <script src="https://widget.cxgenie.ai/widget.js" data-aid="bc88ed95-d796-4b33-9650-4dac3481462b"
		
    data-lang="en"></script>
</head>

<body>

    <header class="navbar">
        <nav>
            <a href="#home">Home</a>
            <a href="#about">About</a>
            <a href="#contact">Contact Us</a>
        </nav>
        <div class="auth-buttons">
            <button onclick="showForm('signupFormCard')">Sign Up</button>
            <button onclick="showForm('loginFormCard')">Login</button>
            <button onclick="toggleProfile()">Profile</button>
        </div>
    </header>

    <section id="home" class="hero">
        <h1>Welcome to Grama Invest</h1>
        <p>Your guide to financial literacy and investment options.</p>
    </section>


    <div class="logo-container">
        <img src="gramainvest.jpg" alt="Grama Invest Logo">
        <p>Empowering rural India with financial knowledge.</p>
    </div>


    <section class="buttons-container">
        <div class="button-card" onclick="window.location.href='/stockMarket'">
            <img src="stock.jpg" alt="Stock Market">
            <h3>Stock Market</h3>
            <p>Learn about stock market investments and strategies.</p>
        </div>
        <div class="button-card" onclick="window.location.href='/mutualFunds'">
            <img src="mutualfund.jpg" alt="Mutual Fund">
            <h3>Mutual Fund</h3>
            <p>Discover how mutual funds can grow your wealth.</p>
        </div>
        <div class="button-card" onclick="window.location.href='/cryptocurrency'">
            <img src="crypto.jpg" alt="Cryptocurrency">
            <h3>Cryptocurrency & Bitcoin</h3>
            <p>Explore the world of cryptocurrency and blockchain.</p>
        </div>
        <div class="button-card">
            <img src="govt.jpg" alt="Government Schemes">
            <h3>Govt. Investment Schemes</h3>
            <p>Understand government-backed savings options.</p>
        </div>
        <div class="button-card">
            <img src="fd & rd.jpg" alt="FD & RD">
            <h3>FD & RD</h3>
            <p>Learn the benefits of fixed and recurring deposits.</p>
        </div>
    </section>

    <section class="info">
        <p>A SEBI study reveals that only 27 per cent of the Indian population is financially literate, with even lower
            rates in rural areas and among women. Cultural and societal barriers significantly hinder many women from
            participating in financial decisions.</p>
    </section>

    <section class="about-section" id="about">
        <h2>About Us</h2>
        <p>Grama Invest is dedicated to empowering rural India with financial knowledge and investment options. Our mission is to bridge the financial literacy gap and provide accessible resources for everyone.</p>
    </section>

    <section id="profileSection" class="profile-section">
        <button class="close-btn" onclick="toggleProfile()">&times;</button>
        <h2>Profile</h2>
        <img id="profileImage" src="default-profile.png" alt="Profile Photo">
        <form id="profileForm" method="POST" action="/upload-profile-photo" enctype="multipart/form-data">
            <input type="file" id="profilePhoto" name="profilePhoto" accept="image/*" onchange="previewProfilePhoto()">
            <label for="profilePhoto">Upload Profile Photo</label>
            <button type="submit">Save</button>
        </form>
    </section>

    <div id="signupFormCard" class="form-card">
        <button class="close-btn" onclick="closeForm('signupFormCard')">&times;</button>
        <h2>Sign Up</h2>
        <form id="signupForm" method="POST" action="/signup">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required><br><br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br><br>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required><br><br>
            <button type="submit">Sign Up</button>
        </form>
    </div>

    <div id="loginFormCard" class="form-card">
        <button class="close-btn" onclick="closeForm('loginFormCard')">&times;</button>
        <h2>Login</h2>
        <form id="loginForm" method="POST" action="/login">
            <label for="email">Email:</label>
            <input type="email" id="loginEmail" name="email" required><br><br>
            <label for="password">Password:</label>
            <input type="password" id="loginPassword" name="password" required><br><br>
            <button type="submit">Login</button>
        </form>
    </div>

    <script>
        function showForm(formId) {
            document.getElementById('signupFormCard').classList.remove('active');
            document.getElementById('loginFormCard').classList.remove('active');
            document.getElementById(formId).classList.add('active');
        }

        function closeForm(formId) {
            document.getElementById(formId).classList.remove('active');
        }

        document.getElementById('signupForm').onsubmit = async function (event) {
            event.preventDefault();
            const formData = {
                name: document.getElementById('name').value,
                email: document.getElementById('email').value,
                password: document.getElementById('password').value
            };
            try {
                const response = await fetch('/signup', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });
                const result = await response.json();
                if (response.ok) {
                    alert('Sign-up successful!');
                    closeForm('signupFormCard');
                } else {
                    alert(`Sign-up failed: ${result.message}`);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Sign-up failed');
            }
        }

        document.getElementById('loginForm').onsubmit = async function (event) {
            event.preventDefault();
            const formData = {
                email: document.getElementById('loginEmail').value,
                password: document.getElementById('loginPassword').value
            };
            try {
                const response = await fetch('/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });
                const result = await response.json();
                if (response.ok) {
                    alert('Login successful!');
                    closeForm('loginFormCard');
                } else {
                    alert(`Login failed: ${result.message}`);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Login failed');
            }
        }

        function previewProfilePhoto() {
            const file = document.getElementById('profilePhoto').files[0];
            const reader = new FileReader();
            reader.onloadend = function () {
                document.getElementById('profileImage').src = reader.result;
            }
            if (file) {
                reader.readAsDataURL(file);
            }
        }

        document.getElementById('profileForm').onsubmit = function (event) {
            event.preventDefault();
            // Add your profile photo upload logic here
        }

        function toggleProfile() {
            const profileSection = document.getElementById('profileSection');
            profileSection.classList.toggle('active');
        }

        // Smooth scroll to sections
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>

</html> 